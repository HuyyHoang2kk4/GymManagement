<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagement.AllRegistrationsPage"
             Title="DANH SÁCH ĐĂNG KÝ GÓI TẬP"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Doanh thu -->
            <Frame BorderColor="LightGray" Padding="15" BackgroundColor="#f5f5f5">
                <VerticalStackLayout Spacing="10">
                    <!-- Dòng chọn ngày - bố trí ngang gọn gàng -->
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Label Text="Từ ngày:"
                   FontAttributes="Bold" 
                   FontSize="14"
                   VerticalOptions="Center"/>
                        <DatePicker x:Name="startDatePicker"
                       DateSelected="OnDateSelected"
                       VerticalOptions="Center"
                       WidthRequest="150"/>

                        <Label Text="Đến ngày:"
                   FontAttributes="Bold" 
                   FontSize="14"
                   VerticalOptions="Center"
                   Margin="10,0,0,0"/>
                        <DatePicker x:Name="endDatePicker"
                       DateSelected="OnDateSelected"
                       VerticalOptions="Center"
                       WidthRequest="150"/>
                    </HorizontalStackLayout>

                    <!-- Dòng tiêu đề Doanh thu -->
                    <Label Text="DOANH THU"
               FontAttributes="Bold"
               FontSize="16"
               Margin="0,10,0,0"/>
                    <!-- Thêm margin top để tạo khoảng cách -->

                    <!-- Dòng hiển thị tổng doanh thu -->
                    <Label x:Name="revenueLabel"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="Green"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Thanh tìm kiếm và lọc -->
            <Frame BorderColor="LightGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="TÌM KIẾM ĐĂNG KÝ"
                           FontAttributes="Bold"
                           FontSize="16"/>

                    <HorizontalStackLayout Spacing="10">
                        <Entry x:Name="searchEntry"
                               Placeholder="Tìm theo số điện thoại..."
                               WidthRequest="250"/>
                        <Button Text="Tìm kiếm"
                                Clicked="OnSearchClicked"
                                BackgroundColor="#2196F3"
                                TextColor="White"/>
                        <Button Text="Làm mới"
                                Clicked="OnRefreshClicked"
                                BackgroundColor="#FF9800"
                                TextColor="White"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Danh sách đăng ký -->
            <Label Text="DANH SÁCH ĐĂNG KÝ"
                   FontAttributes="Bold"
                   FontSize="16"/>

            <Frame BorderColor="LightGray">
                <CollectionView x:Name="registrationsCollectionView">
                    <CollectionView.Header>
                        <Grid ColumnDefinitions="*, *, *, *, *"
                              BackgroundColor="#f5f5f5"
                              Padding="10">
                            <Label Text="Họ tên"
                                   Grid.Column="0"
                                   FontAttributes="Bold"/>
                            <Label Text="Số điện thoại"
                                   Grid.Column="1"
                                   FontAttributes="Bold"/>
                            <Label Text="Gói tập"
                                   Grid.Column="2"
                                   FontAttributes="Bold"/>
                            <Label Text="Ngày đăng ký"
                                   Grid.Column="3"
                                   FontAttributes="Bold"/>
                            <Label Text="Ngày hết hạn"
                                   Grid.Column="4"
                                   FontAttributes="Bold"/>
                        </Grid>
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*, *, *, *, *"
                                  Padding="10">
                                <Label Text="{Binding MemberFullName}"
                                       Grid.Column="0"/>
                                <Label Text="{Binding PhoneNumber}"
                                       Grid.Column="1"/>
                                <Label Text="{Binding PackageName}"
                                       Grid.Column="2"/>
                                <Label Text="{Binding RegistrationDate, StringFormat='{0:dd/MM/yyyy}'}"
                                       Grid.Column="3"/>
                                <Label Text="{Binding ExpirationDate, StringFormat='{0:dd/MM/yyyy}'}"
                                       Grid.Column="4"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
